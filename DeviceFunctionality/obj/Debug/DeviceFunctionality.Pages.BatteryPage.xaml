<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
		BackgroundColor="#008cff"
		xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DeviceFunctionality.BatteryPage">
	<Frame>
		<StackLayout>
			<Label Text="{Binding Level, StringFormat= 'Percentage Remaining: {0}'}"></Label>
			<Label Text="{Binding Status, StringFormat= 'Status: {0}'}"></Label>
			<Label Text="{Binding Power, StringFormat= 'Power Source: {0}'}"></Label>
		</StackLayout>
	</Frame>
</ContentPage>
